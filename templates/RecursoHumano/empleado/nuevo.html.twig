{% extends 'base.html.twig' %}
{% block title %}Nuevo Empleado{% endblock %}

{% block content %}
    <h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('empleado_lista') }}">Empleado</a>
            </li>
            <li class="breadcrumb-item active">{{ arEmpleado.codigoEmpleadoPk > 0 ? 'Editar' : 'Nuevo' }}</li>
        </ol>
    </h3>
    <div class="x_panel">
        <div class="x_title">
            <h2>
                {{ arEmpleado.codigoEmpleadoPk > 0 ? 'Editar Empleado' : 'Nuevo Empleado' }}
                {#<small>different form elements</small>#}
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>

            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left '}}) }}
            <div class="container">
                <span class="section">Información personal</span>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="tipoIdentificacion">Documento
                        Identidad:</label>
                    <div class="item col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.identificacionTipoRel,{'attr' : {'class':'form-control col-md-2 col-xs-12 required'}}) }}
                        {{ form_errors(form.identificacionTipoRel) }}
                    </div>
                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="numIdentificacion">Numero
                        Identificacion:</label>
                    <div class="item col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.numIdentificacion,{'attr' : {'class':'form-control col-md-2 col-xs-12','required' :'required' }}) }}
                        {{ form_errors(form.numIdentificacion) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="expedicionFecha">Fecha
                        Expedicion:</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        <div class='input-group date' id='myDatepicker1'>
                            {{ form_widget(form.fechaExpedicion,{'attr' : {'class' : 'form-control col-md-2 col-xs-12','required' :'required'}}) }}
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="ciudadNacimiento">Ciudad
                        Expedicion:</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.ciudadExpedicionRel,{'attr' : {'class' : 'autocomplete form-control col-md-2 col-xs-12'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="CiudadExpedicion">Libreta
                        militar</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.libretaTipoRel,{'attr' : {'class' : 'autocomplete form-control col-md-2 col-xs-12'}}) }}
                    </div>

                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="apellido2">Numero Libreta</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.numLibreta,{'attr' : {'class' : 'form-control col-md-2 col-xs-12'}}) }}
                    </div>
                </div>

                <br>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="nombre1">Nombres:</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.nombre1,{'attr' : {'placeholder' : 'Primer Nombre','required' :'required'}}) }}
                    </div>
                    <div class="col-md-2 col-sm-12 col-xs-12"></div>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.nombre2,{'attr' : {'placeholder' : 'Segundo Nombre'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="apellido1">Apelidos:</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.apellido1,{'attr' : {'placeholder' : 'Primer Apellido','required' :'required'}}) }}
                    </div>
                    <div class="col-md-2 col-sm-12 col-xs-12"></div>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.apellido2,{'attr' : {'placeholder' : 'Segundo Apellido'}}) }}
                    </div>
                </div>

                <br>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="nacimientoFecha">Fecha
                        Nacimiento</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        <div class='input-group date' id='myDatepicker2'>
                            {{ form_widget(form.fechaNacimiento,{'attr' : {'class' : 'form-control col-md-2 col-xs-12'}}) }}
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="ciudadNacimiento">Ciudad
                        Nacimiento</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.ciudadNacimientoRel,{'attr' : {'class' : 'form-control col-md-2 col-xs-12 autocomplete'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="CiudadExpedicion">Sexo</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.identidadSexoRel,{'attr' : {'class' : 'autocomplete form-control col-md-2 col-xs-12'}}) }}
                    </div>

                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="apellido2">rH</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.rhTipoRel,{'attr' : {'class' : 'autocomplete form-control col-md-2 col-xs-12'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="nacimientoFecha">Direccion</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.direccion,{'attr' : {'class' : 'form-control col-md-2 col-xs-12'}}) }}
                    </div>
                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="ciudadNacimiento">Correo
                        Electronico</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.correo,{'attr' : {'class' : 'form-control col-md-2 col-xs-12'}}) }}
                    </div>
                </div>

                <br>

                <span class="section">Información Empresarial</span>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="empleadoTipo">Tipo de
                        Empleado</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.empleadoTipoRel,{'attr' : {'class' : 'autocomplete form-control col-md-2 col-xs-12'}}) }}
                    </div>
                </div>

                <br>

                <span class="section">Información Bancaria</span>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="bancoRel">Banco</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.bancoRel,{'attr' : {'class' : 'form-control col-md-2 col-xs-12 autocomplete'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-12 col-xs-12" for="cuentaBancoTipoRel">Tipo de
                        Cuenta</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.cuentaBancoTipoRel,{'attr' : {'class' : 'autocomplete form-control col-md-2 col-xs-12' , 'placeholder' : 'Tipo de cuenta'}}) }}
                    </div>
                    <label class="control-label col-md-2 col-sm-12 col-xs-12" for="numCuentaBanco">Num Cuenta</label>
                    <div class="col-md-2 col-sm-12 col-xs-12">
                        {{ form_widget(form.numCuentaBanco,{'attr' : {'class' : 'form-control col-md-2 col-xs-12' , 'placeholder' : 'Numero Cuenta'}}) }}
                    </div>
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_widget(form.Guardar) }}
                    <a href="{{ path('empleado_lista') }}" class="btn btn-danger pull-right">Cancelar</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}