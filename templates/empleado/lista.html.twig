{% extends 'base.html.twig' %}

{% block title %}Empleados{% endblock %}

{% block content %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('empleado_lista') }}">Empleados</a>
        </li>
        <li class="breadcrumb-item active">Lista</li>
    </ol>
    <div class="x_panel">
        <div class="x_title">
            <h2>Lista de Empleados
                {#<small>different form elements</small>#}
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="container">
                <div class="table-responsive">
                    <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Num. Identificacion</th>
                            <th>Nombre</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th>
                            <th>
                                <input type="checkbox" id="check-all" class="flat">
                            </th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for empleado in arEmpleado %}
                            <tr>
                                <td>{{ empleado.codigoEmpleadoPk }}</td>
                                <td>{{ empleado.numIdentificacion }}</td>
                                <td>{{ empleado.nombre1 }}</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="a-center">
                                    <input type="checkbox" class="flat" name="table_records">
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                </div>
                <div class="col-xs-12">
                    <a href="{{ path('empleado_nuevo',{'codigoEmpleado': 0}) }}" class="btn btn-success pull-right">Nuevo</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
