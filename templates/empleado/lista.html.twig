{% extends 'base.html.twig' %}

{% block title %}Empleados{% endblock %}

{% block content %}
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Office</th>
                        <th>Age</th>
                        <th>Start date</th>
                        <th>Salary</th>
                    </tr>
                    </tfoot>
                    {% for arEmpleado in arEmpleado %}
                        <tbody>
                        <tr>
                            <td>{{ arEmpleado.codigoEmpleadoPk }}</td>
                        </tr>
                        </tbody>
                    {% endfor %}

                </table>

                {% block javascripts %}
                <script>$(document).ready(function () {
                        $('#example').DataTable();
                    });</script>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
