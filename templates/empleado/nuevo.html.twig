{% extends 'base.html.twig' %}
{% block title %}Nuevo Empleado{% endblock %}

{% block content %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('empleado_lista') }}">Empleado</a>
        </li>
        <li class="breadcrumb-item active">Nuevo</li>
    </ol>
    <div class="x_panel">
        <div class="x_title">
            <h2>Nuevo Empleado
                {#<small>different form elements</small>#}
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                {#<li class="dropdown">#}
                {#<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i#}
                {#class="fa fa-wrench"></i></a>#}
                {#<ul class="dropdown-menu" role="menu">#}
                {#<li><a href="#">Settings 1</a>#}
                {#</li>#}
                {#<li><a href="#">Settings 2</a>#}
                {#</li>#}
                {#</ul>#}
                {#</li>#}
                {#<li><a class="close-link"><i class="fa fa-close"></i></a>#}
                {#</li>#}
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left input_mask'}}) }}
                <div class="container">
                    <div class="form-group">
                        <div class="col-md-3 form-group has-feedback">
                            <label for="tipoIdentificacion">Tipo Identificacion</label>
                            {{ form_widget(form.identificacionTipoRel) }}
                        </div>
                        <div class="col-md-3 form-group has-feedback">
                            <label for="numDocumento">Numero Identificacion</label>
                            {{ form_widget(form.numIdentificacion) }}
                        </div>
                        <div class="col-md-3 form-group has-feedback">
                            <label for="expedicionFecha">Fecha Expedicion</label>
                            {#<div class="form-group">#}
                            <div class='input-group date' id='myDatepicker'>
                                {{ form_widget(form.fechaExpedicion) }}
                                <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar">
                                        </span>
                                    </span>
                                {#</div>#}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 form-group has-feedback">
                            <label for="nombre1">Primero Nombre</label>
                            {{ form_widget(form.nombre1) }}
                        </div>
                        <div class="col-md-3 form-group has-feedback">
                            <label for="nombre2">Segundo Nombre</label>
                            {{ form_widget(form.nombre2) }}
                        </div>
                        <div class="col-md-3 form-group has-feedback">
                            <label for="apellido1">Primer Apelido</label>
                            {{ form_widget(form.apellido1) }}
                        </div>
                        <div class="col-md-3 form-group has-feedback">
                            <label for="apellido2">Segundo Apellido</label>
                            {{ form_widget(form.apellido2) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 form-group has-feedback">
                            <label for="empleadoTipo">Tipo de Empleado</label>
                            {{ form_widget(form.empleadoTipoRel) }}
                        </div>
                        <div class="col-md-3 form-group has-feedback">
                            <label for="apellido2">Segundo Apellido</label>
                            {#{{ form_widget(form.expedicionDocumentoFecha) }}#}
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_widget(form.Guardar) }}
                        <a href="{{ path('empleado_lista') }}" class="btn btn-danger pull-right">Cancelar</a>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}