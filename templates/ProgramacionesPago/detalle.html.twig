                                            <td>{{ contratos.codigoProgramacionPagoResumenPk }}</td>
                                            <td>{{ contratos.empleadoRel.numIdentificacion }}</td>
                                            <td>{{ contratos.empleadoRel.nombreCompleto }}</td>
                                            <td>{{ contratos.contratoRel.grupoPagoRel.nombre |default("") }}</td>
                                            <td>{{ contratos.dias | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.vrDevengado | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.vrDeducciones | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.vrNetoPagar | number_format(0,'.',',') }}</td>
                                            <td></td>
                                            <td>{{ contratos.horasDescanso | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasDiurnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasNocturnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasFestivasDiurnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasFestivasNocturnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasExtrasOrdinariasDiurnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasExtrasOrdinariasNocturnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasExtrasFestivasDiurnas | number_format(0,'.',',') }}</td>
                                            <td>{{ contratos.horasExtrasFestivasNocturnas | number_format(0,'.',',') }}</td>

                                            <td>
                                                {#<a href="{{ path('empleado_detalle', { 'codigoEmpleado': empleado.codigoEmpleadoPk }) }}"#}
                                                {#class="btn btn-info btn-xs"><i class="fa fa-folder"></i> Ver </a>#}
                                            </td>
                                            <td>
                                                {#<a href="{{ path('contrato_nuevo', { 'codigoEmpleado': arEmpleadoDetalle.codigoEmpleadoPk ,'codigoContrato': contratos.codigoContratoPk }) }}"#}
                                                {#class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> Editar#}
                                                {#</a>#}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <!-- end recent activity -->
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        {#<a href="{{ path('contrato_nuevo',{'codigoEmpleado': arEmpleadoDetalle.codigoEmpleadoPk  , 'codigoContrato' : 0 }) }}"#}
                                        {#class="btn btn-primary pull-right">Nuevo Contrato</a>#}
                                        {#</div>#}
                                    </div>
                                </div>
