                                    <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>Identificacion</th>
                                        <th>Empleado</th>
                                        <th>Grupo Pago</th>
                                        <th>Días</th>
                                        <th>Devengado</th>
                                        <th>Deducciones</th>
                                        <th>Neto</th>
