{% extends 'base.html.twig' %}

{% block title %}Programación pago{% endblock %}

{% block content %}
    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('empleado_lista') }}">Programación pago</a>
            </li>
            <li class="breadcrumb-item active">Lista</li>
        </ol>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Lista de Programaciónes de pago
                            {#<small>different form elements</small>#}
                        </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        {#<div class="container">#}
                        {#<div class="table-responsive">#}
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                               cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Numero</th>
                                <th>Nombre</th>
                                <th>Fecha desde</th>
                                <th>Fecha hasta</th>
                                <th></th>
                                <th></th>
                                <th>Ver</th>
                                {#<th></th>#}
                                {#<th></th>#}
                            </tr>
                            </thead>

                            <tbody>
                            {% for programacionesPago in arProgramacionesPago %}
                                <tr>
                                    <td>{{ programacionesPago.codigoProgramacionPagoPk }}</td>
                                    <td>{{ programacionesPago.numero }}</td>
                                    <td>{{ programacionesPago.nombre }}</td>
                                    <td>{{ programacionesPago.fechaDesde | date('d-m-Y') }}</td>
                                    <td>{{ programacionesPago.fechaHasta | date('d-m-Y') }}</td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <a href="{{ path('programacion_pago_resumen', { 'codigoProgramacionPago': programacionesPago.codigoProgramacionPagoPk }) }}"
                                           class="btn btn-info btn-xs"><i class="fa fa-folder"></i> Ver </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {#</div>#}
                        <div class="ln_solid"></div>
                        <div class="col-xs-12">
                            <a href="{{ path('programacion_pago_nuevo',{'codigoProgramacionPago': 0}) }}"
                               class="btn btn-primary pull-right">Nuevo</a>
                        </div>
                        {#</div>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
